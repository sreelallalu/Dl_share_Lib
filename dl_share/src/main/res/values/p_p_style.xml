<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="alert_color_accent">#03a9f4</color>

    <dimen name="p2p_wifi_info_layout_padding">10dp</dimen>
    <dimen name="p2p_sender_activity_items_margin">15dp</dimen>
    <dimen name="p2p_sender_items_count_margin">5dp</dimen>
    <color name="white">#fff</color>




    <style name="appbarlayout_toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/alert_color_accent</item>
        <item name="colorPrimary">@color/alert_color_accent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowTitleStyle">@style/AlertTitleTextStyle</item>
    </style>

    <style name="AlertTitleTextStyle">
        <item name="android:textColor">@color/alert_color_accent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="p2p_switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#46bdbf</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#cccccc
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#ffffff</item>
    </style>


    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/p_p_custom_progress_horizontal</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>

    <style name="Theme.AppCompat.Light.Dialog.Alert"></style>
</resources>